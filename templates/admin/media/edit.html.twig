{% extends 'admin.html.twig' %}

{% set pageTitle = medium.name %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center border-bottom mb-4">
        <div class="btn-group mb-3" role="group" aria-label="Action Media">
            <a href="{{ path('media_index') }}" class="btn btn-secondary">
                <i data-feather="arrow-left">&nbsp;</i>
            </a>
            <a href="{{ path('media_post_view', {'pathCategory' : medium.category.path, 'path': medium.path}) }}" class="btn btn-secondary" target="_blank">
                <i data-feather="external-link">&nbsp;</i>
            </a>
            <a href="{{ path('media_check_active', {'id': medium.id}) }}" class="btn btn-secondary">
                <i data-feather="{{medium.active ? 'eye-off' : 'eye'}}">&nbsp;</i>
            </a>
            <a href="{{ path('media_check_archive', {'id': medium.id}) }}" class="btn btn-secondary">
                <i data-feather="{{medium.deleted ? 'upload' : 'archive'}}">&nbsp;</i>
            </a>
        </div>
        {{ include('admin/media/_delete_form.html.twig') }}
    </div>
    {{ include('admin/media/_form.html.twig', {'button_label': 'Сохранить'}) }}
{% endblock %}