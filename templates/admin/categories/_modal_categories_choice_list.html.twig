<!-- Modal -->
<div class="modal fade" id="categoriesList" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="categoriesListLabel">Выбор категории</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                {% for category in categories %}
                    <li class="list-group-item">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="category" id="category_{{ category.id }}" value="{{ category.id }}">
                            <label for="category_{{ category.id }}" class="form-check-label mx-3">{{ category.name }}</label>
                        </div>
                    </li>
                {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button id="selectCategory" type="button" class="btn btn-primary">Выбрать</button>
            </div>
        </div>
    </div>
</div>