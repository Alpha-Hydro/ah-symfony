<table class="table table-striped">
    <thead class="thead-light">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Сортировка в группе</th>
        <th scope="col">Наименование</th>
        <th scope="col">Родительская категория</th>
        {#<th>Create_date</th>
        <th>Update_date</th>
        <th>Active</th>
        <th>Deleted</th>#}
        {#<th>Image</th>
        <th>UploadPath</th>
        <th>Description</th>
        <th>ContentHtml</th>
        <th>Path</th>
        <th>FullPath</th>
        <th>MetaTitle</th>
        <th>MetaKeywords</th>
        <th>MetaDescription</th>#}
        <th colspan="3" class="text-center">actions</th>
    </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.sorting }}</td>
            <td><a href="{{ path('categories_view', {'id': category.id}) }}">{{ category.name }}</a></td>
            <td>
                {% if category.parent is not null %}
                    <a href="{{ path('categories_view', {'id': category.parent.id}) }}">{{ category.parent.name }}</a>
                {% else %}
                    Каталог
                {% endif %}
            </td>
            {#<td>{{ category.createDate ? category.createDate|date('Y-m-d') : '' }}</td>
            <td>{{ category.updateDate ? category.updateDate|date('Y-m-d') : '' }}</td>
            <td>{{ category.active ? 'Yes' : 'No' }}</td>
            <td>{{ category.deleted ? 'Yes' : 'No' }}</td>#}
            {#<td>{{ category.image }}</td>
            <td>{{ category.uploadPath }}</td>
            <td>{{ category.description }}</td>
            <td>{{ category.contentHtml }}</td>
            <td>{{ category.path }}</td>
            <td>{{ category.fullPath }}</td>
            <td>{{ category.metaTitle }}</td>
            <td>{{ category.metaKeywords }}</td>
            <td>{{ category.metaDescription }}</td>#}
            <td>
                <a href="{{ path('catalog_list', {'fullPath': category.fullPath}) }}" target="_blank">
                    <svg class="feather feather-external-link sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
                </a>
            </td>
            <td>
                <a href="{{ path('categories_edit', {'id': category.id}) }}">
                    <svg class="feather feather-edit-3 sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polygon points="14 2 18 6 7 17 3 17 3 13 14 2"></polygon><line x1="3" y1="22" x2="21" y2="22"></line></svg>
                </a>
            </td>
            <td>
                <a href="{{ path('categories_delete', {'id': category.id}) }}">
                    <svg class="feather feather-trash-2 sc-dnqmqq jxshSx" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
