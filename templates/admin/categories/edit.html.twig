{% extends 'admin.html.twig' %}

{% block title %}{{category.name}} - Edit Categories{% endblock %}

{% block pageHeader %}<h1 class="display-4 mb-4">{{ category.name }}</h1>{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center border-bottom mb-4">
        <div class="btn-group mb-3" role="group" aria-label="Basic example">
            <a href="{{  path('categories_index')}}" class="btn btn-secondary">
                <i data-feather="arrow-left">&nbsp;</i>
            </a>

            <a href="{{ path('catalog_list', {'fullPath': category.fullPath}) }}" class="btn btn-secondary">
                <i data-feather="external-link">&nbsp;</i>
            </a>
        </div>
        {{ include('admin/categories/_delete_form.html.twig') }}
    </div>

    {{ include('admin/categories/_form.html.twig', {'current': category}) }}

{% endblock %}