<table class="table table-striped">
    <thead class="thead-light">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Сортировка в группе</th>
        <th scope="col">Наименование</th>
        <th colspan="3" class="text-center">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.sorting }}</td>
            <td><a href="{{ path('categories_view', {'id': category.id}) }}">{{ category.name }}</a></td>
            <td>
                <a href="{{ path('catalog_list', {'fullPath': category.fullPath}) }}" target="_blank">
                    <i data-feather="external-link">&nbsp;</i>
                </a>
            </td>
            <td>
                <a href="{{ path('categories_edit', {'id': category.id}) }}" class="text-success">
                    <i data-feather="edit-3">&nbsp;</i>
                </a>
            </td>
            <td>
                <a href="{{ path('categories_delete', {'id': category.id}) }}" class="text-danger">
                    <i data-feather="trash-2">&nbsp;</i>
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
