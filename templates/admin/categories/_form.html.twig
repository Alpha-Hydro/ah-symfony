{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<fieldset>
    {{ form_row(form.image) }}
    {{ form_row(form.name) }}
    {{ form_row(form.parent) }}
    <div class="form-group">
        <label class="form-control-label">Родительская категория</label>
        <div class="input-group mb-3">
            <input id="parentCategoryName" type="text" class="form-control" placeholder="{{ category.parent.name | default('Каталог') }}" aria-label="Родительская категория" readonly>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#categoriesList">
                    <svg class="feather feather-refresh-ccw" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="1 4 1 10 7 10"></polyline><polyline points="23 20 23 14 17 14"></polyline><path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path></svg>
                </button>
            </div>
        </div>
    </div>
    {{ form_row(form.description) }}
</fieldset>
<fieldset>
    <legend>SEO</legend>
    {{ form_row(form.metaTitle) }}
    {{ form_row(form.metaKeywords) }}
    {{ form_row(form.metaDescription) }}
</fieldset>
<fieldset>
    <legend>Активность, сортировка</legend>
    {{ form_row(form.active) }}
    {{ form_row(form.sorting) }}
</fieldset>
<button class="btn btn-success">{{ button_label|default('Сохранить') }}</button>
{{ form_end(form) }}

