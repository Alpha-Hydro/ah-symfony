{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_start(form, {'attr' : {'class': 'form-horizontal well well-lg'}}) }}
            <fieldset>
                <legend>Регистрация</legend>
                <div class="form-group">
                    {{ form_label(form.name, 'Имя, Фамилия', {'label_attr' : {'class': 'col-md-4 control-label optional'}}) }}
                    <div class="col-md-8">
                        {{ form_widget(form.name, {'attr':{'class':'form-control', 'placeholder': 'Имя, Фамилия'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email, 'Email', {'label_attr' : {'class': 'col-md-4 control-label optional'}}) }}
                    <div class="col-md-8">
                        {{ form_widget(form.email, {'attr':{'class':'form-control', 'placeholder': 'you@email.com'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, 'Пароль', {'label_attr' : {'class': 'col-md-4 control-label optional'}}) }}
                    <div class="col-md-8">
                        {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control', 'placeholder': 'Пароль'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, 'Повтор пароля', {'label_attr' : {'class': 'col-md-4 control-label optional'}}) }}
                    <div class="col-md-8">
                        {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control', 'placeholder': 'Повтор пароля'}}) }}
                    </div>
                </div>
                <div class=" form-group ">
                    <div class="col-md-offset-2 col-md-10 text-right">
                        <button type="submit" class="btn btn-default btn-success">Регистрация</button>
                        <button type="reset" class="btn btn-default">Отмена</button>
                    </div>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}