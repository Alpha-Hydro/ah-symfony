{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class=" form-group ">
                <div class="text-right">
                    <button type="submit" class="btn btn-default btn-success">Запросить новый пароль</button>
                    <a href="{{ path('index') }}" type="reset" class="btn btn-default">Отмена</a>
                </div>
            </div>
            {{ form_end(form) }}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" role="alert">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block header %}
    {{ include('admin/components/_logo_ru_svg.html.twig')}}
{% endblock %}

