{% extends 'admin.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block pageHeader %}<h1 class="display-4 mb-4">{{ user.name }}</h1>{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="d-flex justify-content-end">
                <a href="{{ path('user_index') }}" type="button" class="btn btn-light mx-3">Отмена</a>
                <button type="submit" class="btn btn-success">{{ button_label|default('Сохранить') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

