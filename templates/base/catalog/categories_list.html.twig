{% extends 'base/catalog/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="categories-list flex-box">
            {% for category in categories %}
                <div class="flex-box-item card hover">
                    <a href="{{ path('catalog_list', {'fullPath' : category.fullPath}) }}">
                        {% if category.fileImage is not null %}
                            <div class="card-image">
                                <img src="{{ 'upload/categories/' ~ category.fileImage.fileName }}" alt="{{ category.name }}"/>
                            </div>
                        {% endif %}
                        <div class="card-title bottom text-center">
                            {{ category.name }}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ category.contentHtml|default('')|raw }}
        </div>
    </div>
{% endblock %}