{% spaceless %}
<div class="product-images">
    <div class="row">
        {#<div class="col-xs-6 col-sm-12">
            {% if product.image is not null and product.image != '' %}
                <div class="thumbnail">
                    <img id="imageUploadView" src="{{ product.uploadPath }}{{ product.image }}"
                         alt="{{ product.name }}">
                </div>
            {% endif %}
        </div>#}
        <div class="col-xs-6 col-sm-12">
            {% if product.draft is not null and product.draft != '' %}
                <div class="thumbnail">
                    <a href="#" data-toggle="modal" data-target="#draftImageProduct">
                        <img class="imageUploadView" src="{{ product.uploadPathDraft }}{{ product.draft }}" alt="{{ product.name }}">
                    </a>
                </div>
                <div class="modal fade" id="draftImageProduct" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">{{ product.sku }}<small>{{ product.name }}</small></h4>
                            </div>
                            <div class="modal-body">
                                <div class="modal-draft-images text-center">
                                    <img class="imageUploadView" src="{{ product.uploadPathDraft }}{{ product.draft }}" alt="{{ product.name }}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="thumbnail">
                    <img class="imageUploadView" id="imageUploadView" src="{{ asset('files/images/no-foto.jpg') }}" alt="{{ product.name }}">
                </div>
            {% endif %}
            {{ include('base/catalog/redactor/_btn_group_draft_edit.html.twig', {'item': product}) }}
        </div>
    </div>
</div>
{% endspaceless %}