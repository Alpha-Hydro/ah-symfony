{% if category.parent is defined %}
    <a href="#" class="replace-category list-group-item list-group-item-info list-group-item-action d-flex justify-content-between align-items-center"  data-replace-category="{{ parent.id | default('') }}">
        <i data-feather="corner-left-up">&nbsp;</i><i data-feather="folder">&nbsp;</i>
    </a>
{% endif %}
{% if currentId is not defined %}
    {% set currentId = current.id | default(0) %}
{% endif %}
{% for category in categories %}
    {% if category.id == currentId %}
        <li class="list-group-item active">
            <i data-feather="check-circle">&nbsp;</i>
            <span class="mx-3">{{ category.name }}</span>
        </li>
    {% else %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="category" id="category_{{ category.id }}" value="{{ category.id }}">
                <label for="category_{{ category.id }}" class="form-check-label mx-3">{{ category.name }}</label>
            </div>
            <button type="button" class="btn btn-light btn-sm replace-category" data-replace-category="{{ category.id }}">
                <i data-feather="layers">&nbsp;</i>
            </button>
        </li>
    {% endif %}
{% endfor %}