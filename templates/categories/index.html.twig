{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>UploadPath</th>
                <th>Description</th>
                <th>ContentHtml</th>
                <th>Path</th>
                <th>FullPath</th>
                <th>MetaTitle</th>
                <th>MetaKeywords</th>
                <th>MetaDescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.image }}</td>
                <td>{{ category.uploadPath }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.contentHtml }}</td>
                <td>{{ category.path }}</td>
                <td>{{ category.fullPath }}</td>
                <td>{{ category.metaTitle }}</td>
                <td>{{ category.metaKeywords }}</td>
                <td>{{ category.metaDescription }}</td>
                <td>
                    <a href="{{ path('categories_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('categories_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}">Create new</a>
{% endblock %}