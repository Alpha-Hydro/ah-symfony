{% extends 'catalog/index.html.twig' %}

{% block content %}
    <div class="product-list">
        {% for product in category.products %}
            <div class="row product-item">
                <div class="col-sm-3">
                    <div class="thumbnail product-images">
                        <a href="{{ path('catalog_product_view', {'fullPathCategory': category.fullPath, 'path': product.path}) }}">
                            <img src="{{ product.uploadPath }}{{ product.image }}"
                                 alt="{{ product.name }}">
                        </a>
                    </div>
                </div>
                <div class="col-sm-9">
                    <h2 class="h4">
                        <a href="{{ path('catalog_product_view', {'fullPathCategory': category.fullPath, 'path': product.path}) }}">{{ product.sku }}</a>
                        <small>{{ product.name }}</small>
                    </h2>
                    {{ include('catalog/_product_params.html.twig') }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}